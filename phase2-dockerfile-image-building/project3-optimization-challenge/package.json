{
    "name": "fullstack-monorepo",
    "version": "1.0.0",
    "private": true,
    "workspaces": [
        "app/frontend",
        "app/backend",
        "app/shared"
    ],
    "scripts": {
        "install:all": "npm install && npm run install:frontend && npm run install:backend",
        "install:frontend": "cd app/frontend && npm install",
        "install:backend": "cd app/backend && npm install",
        "build:frontend": "cd app/frontend && npm run build",
        "build:backend": "cd app/backend && npm run build",
        "build": "npm run build:backend && npm run build:frontend",
        "start": "cd app/backend && npm start"
    },
    "devDependencies": {
        "typescript": "^5.3.3",
        "concurrently": "^8.2.2"
    }
}